<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/popup_bg">

    <TextView
        android:id="@+id/txtPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khiếu nại"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtPopupDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập lý do khiếu nại của bạn:"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edtAppealReason"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Nhập lý do..."
        android:gravity="top|start"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSendAppeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi khiếu nại"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>

</LinearLayout>
