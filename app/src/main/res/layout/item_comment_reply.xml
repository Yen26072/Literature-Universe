<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp">

    <ImageView
        android:id="@+id/imgAvatarReply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Thông tin người dùng và nội dung comment -->
            <TextView
                android:id="@+id/txtUserNameReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCommentTimeReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 giờ trước"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtChapterTitleReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên chương"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/txtCommentContentReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung bình luận"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtReportButtonReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cử báo"
                android:gravity="end"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtReplyButtonReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trả lời"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>