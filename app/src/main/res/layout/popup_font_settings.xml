<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Cột bên trái: Font, Size, Line, Hán Việt -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <!-- Font -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spFont"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <!-- Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spSize"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <!-- Line -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spLine"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Cột bên phải: Màu nền -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màu nền"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Các ô màu -->
        <View
            android:id="@+id/bgColor1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="#E1F5FE" />

        <View
            android:id="@+id/bgColor2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/bgColor3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="#BBDEFB" />

        <View
            android:id="@+id/bgColor4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="#E0D7C6" />

        <View
            android:id="@+id/bgColor5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#000000" />
    </LinearLayout>
</LinearLayout>
