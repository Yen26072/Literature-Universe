<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="#F5F5F5"
    tool:context=".activity.DetailStoryReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <include layout="@layout/header"/>

        <!-- SECTION: Reporter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người báo cáo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgReporter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tvReporter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username Reporter"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>


        <!-- SECTION: Report Reason -->
        <TextView
            android:id="@+id/txtTitleReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lý do báo cáo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung lý do báo cáo"
            android:layout_marginTop="4dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 giờ trước"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#666"/>


        <!-- SECTION: Story Info -->
        <TextView
            android:id="@+id/txtTitleStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin truyện"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgCoverStory"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tvStoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Story Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>


        <!-- SECTION: Chapter Info -->
        <TextView
            android:id="@+id/tvTitleChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chương: ..."
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvChapterContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung chương"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:layout_marginTop="8dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnConfirmViolation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận vi phạm"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnConfirmNoViolation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận không vi phạm"
            android:layout_marginTop="10dp"
            android:backgroundTint="#22AA55"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnRejected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Từ chối khiếu nại"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnAccepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chấp nhận khiếu nại"
            android:layout_marginTop="8dp"
            android:backgroundTint="#22AA55"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
